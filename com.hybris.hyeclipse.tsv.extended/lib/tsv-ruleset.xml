<?xml version="1.0" encoding="UTF-8"?>
<profile>
    <name>Hybris TSV Ruleset</name>
    <language>xml</language>
    <rules>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>DeploymentTableMustExistForItemExtendingGenericItem</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>DeploymentTypeCodeMustBeGreaterThanTenThousand</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>NoDeploymentTableShouldExistForItemIfNotExtendingGenericItem</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>JaloClassIsNotAllowedWhenAddingFieldsToExistingClass</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>DeploymentTableMustExistForManyToManyRelation</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>MandatoryFieldMustHaveInitialValue</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>ImmutableFieldMustHaveInitialValue</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>BooleanFieldCannotBeOptional</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>JaloPersistanceTypeIsDeprecated</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>CmpPersistanceTypeIsDeprecated</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>TypeNameMustStartWithUppercaseLetter</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>TypeNameMustNotStartWithGenerated</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>FieldNameMustStartWithLowercaseLetter</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>RelationshipQualifierNameMustStartWithLowercaseLetter</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>OrderingOfRelationShouldBeAvoided</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>ListsInRelationShouldBeAvoided</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>UseOfUnoptimizedAttributesIsNotRecommended</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>NoDatabaseIndexesForUniqueAttributesOfType</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>CatalogVersionAttributeShouldBeMarkedUniqueForCatalogAwareTypes</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>UniqueAttributesDontMatchCatalogUniqueAttributeKey</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>One2ManyRelationWhereTheOneSideIsCatalogAwareTypeAndTheManySideIsNot</key>
        </rule>
        <rule>
            <repositoryKey>tsv</repositoryKey>
            <key>NoUniqueAttributesDefinedForType</key>
        </rule>
    </rules>
</profile>